<% content_for :body_content_title do %>
  <%= @business.company_name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Company Name</h1>
    <p>
      <%=raw @business.company_name %>
    </p>
  </section>
  <section>
    <h1>Company Url</h1>
    <p>
      <%=raw @business.company_url %>
    </p>
  </section>
  <section>
    <h1>Email</h1>
    <p>
      <%=raw @business.email %>
    </p>
  </section>
  <section>
    <h1>Phone Number</h1>
    <p>
      <%=raw @business.phone_number %>
    </p>
  </section>
  <section>
    <h1>Address</h1>
    <p>
      <%=raw @business.address %>
    </p>
  </section>
  <section>
    <h1>Hours</h1>
    <p>
      <%=raw @business.hours %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @business.description %>
    </p>
  </section>
  <section>
    <h1>Category</h1>
    <p>
      <%=raw @business.category_id %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="businesses">
      <% @businesses.each do |business| %>
        <li>
          <%= link_to business.company_name, refinery.businesses_business_path(business) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
